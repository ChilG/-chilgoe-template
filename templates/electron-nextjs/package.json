{
  "name": "electron-nextjs",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "format": "prettier --write \"renderer/**/*.(ts|tsx)\" \"!renderer/.next/**/*\" \"main/**/*.(ts|tsx)\" \"scripts/**/*.ts\"",
    "next:dev": "next -p 3000 renderer",
    "next:build": "next build renderer",
    "electron:compile": "tsc -project tsconfig.electron.json",
    "electron:serve": "electron app/background.js",
    "dev": "cross-env NODE_ENV=development concurrently --names \"compile,next,electron\" -c \"yellow,blue,cyan\" \"npm run electron:compile\" \"npm run next:dev\" \"wait-on http://localhost:3000 && npm run electron:serve\"",
    "prebuild": "rimraf app dist",
    "electron:build": "electron-builder --config electron-builder.yml --win --x64",
    "build": "cross-env NODE_ENV=production concurrently --names \"next,compile,electron\" -c \"blue,yellow,cyan\" \"npm run next:build\" \"npm run electron:compile\" \"npm run electron:build\""
  },
  "main": "app/background.js",
  "dependencies": {
    "electron-serve": "^1.3.0",
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.4",
    "next": "14.2.4",
    "prettier": "^3.3.2",
    "react": "^18",
    "react-dom": "^18",
    "rimraf": "^5.0.7",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  }
}
